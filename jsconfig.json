{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#src/*": ["./src/*"],
      "#components/*": ["src/components/*/index.js"],
      "#pages/*": ["./src/pages/*/index.js"],
      "#styles/*": ["./src/styles/*"],
      "#utils/*": ["./src/utils/*"],
      "#assets/*": ["./src/assets/*"],
      "#layouts/*": ["./src/layouts/*/index.js"],
      "#contexts/*": ["./src/contexts/*"],
      "#hooks/*": ["./src/hooks/*"]
    },
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
